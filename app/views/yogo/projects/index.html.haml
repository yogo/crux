=clear_break
#content-block
  - for project in @projects
    .content-row-block
      /.project-icon= link_to(image_tag('mock-project-icon.jpg'), project_path(project) )

      .project-text
        %h2
          = link_to(project.name, project_path(project) ) 
          = image_tag('icons/private_16.png', :title => 'Private Project') if project.is_private?
        .action-links
          - if project.yogo_model_uid
            = link_to("Edit Experimental Design", kefed_editor_project_url(project, :uid => project.yogo_model_uid), :class => 'button-link')
          - else
            = link_to("Add Experimental Design", kefed_library_project_url(project), :class => 'button-link')
          = link_to("Import Spreadsheet", import_csv_path(project), :class => 'button-link')        
          = link_to("Project Settings", edit_project_path(project), :class => 'button-link')
        %p.rbox.tight
          - if project.description && project.description.length > 0
            %strong= link_to('Project Description', edit_project_path(project), :title => 'Edit Project Description')
            =clear_break
            %em= tooltip(project.description, 
                    project.name + ' Description', 200)
          - else
            %em= link_to('[Add Project Description]', edit_project_path(project))
          
      .project-datasets
        - if project.models.empty?
          %p 
            There are no datasets associated with this project.<br />
            = link_to('Edit Experimental Design', kefed_editor_project_url(project))
        - else
          %table
            %thead
              %tr
                %th Subject ID
                %th Rows
            %tbody
              /- for row in project.root_model.all
              - row = project.root_model.all.first
              %tr
                %td= row.inspect
                %td= project.root_model.all.size
                /%td= link_to dataset.public_name,
                /      project_yogo_data_index_path(project, dataset) 
                /%td= link_to(dataset.count(:created_at.gt => 1.week.ago),
                /      project_yogo_data_index_path(project, dataset))
                /%td= link_to(dataset.count, project_yogo_data_index_path(project, dataset))
                /%td= link_to(image_tag('table_edit.png', :title => "Browse Data") + " Browse",
                /      project_yogo_data_index_path(project, dataset))
                / TODO: Show the model editor
                /%td= link_to(image_tag('layout_edit.png', 
                /      :title => "Describe Dataset") + " Describe",
                /      project_yogo_models_path(project))
                /%td= link_to(image_tag('table_add.png', 
                /      :title => "Import Spreadsheet") + " Import", 
                /      import_csv_path(project))

